<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link href="https://fonts.googleapis.com/css?family=Bungee+Shade" rel="stylesheet">
    <style>
     h1 {
       font-family: 'Bungee Shade', cursive;
       font-size: 75px;
     }
   </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/"><h1>Gif Generator</h1></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/gifs">Gifs <span class="sr-only">(current)</span></a>
          </li>
          <% if current_user && current_user.admin? %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/gifs/new">Generate a new GIF</a>
            </li>
            <% elsif current_user %>
              <li class="nav-item">
                <%= link_to 'Favorited Gifs', user_gifs_path(current_user), class: "nav-link" %>
              </li>
          <% end %>
          <% if current_user.nil? %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link" %>
            </li>
          <% end %>
          <% if current_user.nil? %>
            <li class="nav-item">
              <a class="nav-link" href="/users/new">Sign Up</a>
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
