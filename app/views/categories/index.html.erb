<%= flash[:success] %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="display-6">We have <%= @categories.count %> categories for you to explore.</h2>
    <p class="lead">Too lazy to browse? We got your back.</p>
    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category), class: "badge badge-primary" %>
    <% end %>
  </div>
</div>

<div class="card-group">
  <div class="col-4">
  <% @categories.each do |category| %>
    <div class="card border border-white">
      <h4><%= link_to category.name, category_path(category) %></h4>
      <img class="card-img-top" src=<%= category.sample_gif %> alt="Card image cap">
      <div class="card-body">
        <span class="badge badge-danger"><%= category.gifs.count %> GIFS</span>
        <%= link_to "DELETE CATEGORY", category_path(category), method: :delete, class: "badge badge-warning" if current_user.admin? %>
      </div>
    </div>
  <% end %>
  </div>
</div>
