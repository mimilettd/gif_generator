<h2><%= @category.name.capitalize %> Gifs</h2>

<div class="row">
  <% @gifs.each do |gif| %>
    <div class="card border border-white" style="width: 17rem;">
      <img class="card-img-top" src=<%= gif.image_path %> alt="Card image cap" style="height:150px;">
      <div class="card-body">
        <%= link_to 'FAVORITE ❤', user_gifs_path(current_user.id, :gif_id => gif.id), method: :post, class: "badge badge-danger" if current_user.gifs.include?(gif) == false %>
        <%= link_to 'UNFAVORITE', user_gif_path(current_user, gif), method: :delete, class: "badge badge-warning" if current_user.gifs.include?(gif)%>
      </div>
    </div>
  <% end %>
</div>
